doctype html
html
   head
      style
         include ../public/cssfiles/jobseekerhome.css
      title
         | JobMensa

   body
      div(class="header")
         div(id="headertitle")
            | Welcome
      ul
         li
            a(href='#') Home
         li
            a(href='/OpenAddjobs') Add Jobs
         li
            a.active(href='/showJobs') View Jobs
         li
            a(href='/logout') logout
      div(style='margin-left:25%;height:300px;' id="news")
         table(border=1)
            for user in users
               tr
                  td
                     | Title : #{user.job_position_title}
                  td
                     | Description : #{user.job_description}
                  td
                     | City : #{user.job_city}